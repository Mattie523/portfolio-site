---
import PhotoGridLayout from '../../components/PhotoGridLayout.astro';
import { getEntry } from 'astro:content';

const portraitsEntry = await getEntry('photos', 'portraits');
const generalEntry = await getEntry('photos', 'general');

const portraits = portraitsEntry?.data ? [...portraitsEntry.data].sort((a, b) => a.order - b.order) : [];
const general = generalEntry?.data ? [...generalEntry.data].sort((a, b) => a.order - b.order) : [];
---

<PhotoGridLayout portraits={portraits} general={general} />
