---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Mattie Sipp - Photography & Videography</title>

		<!-- Preload critical assets for performance -->
		<link rel="preconnect" href="https://player.vimeo.com" />
		<link rel="preconnect" href="https://img.youtube.com" />
		<link rel="dns-prefetch" href="https://f.vimeocdn.com" />

		<ViewTransitions />
	</head>
	<body class="flex flex-col min-h-screen bg-white dark:bg-stone-900 text-black dark:text-white m-0 w-full relative">
		<!-- Skip to main content link for keyboard users -->
		<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-sage-600 focus:text-white focus:px-4 focus:py-2 focus:rounded focus:shadow-lg">
			Skip to main content
		</a>

		<div class="fixed inset-x-0 top-0 h-[20vh] bg-gradient-to-b from-sage-300 dark:from-sage-300/50 to-transparent pointer-events-none z-0"></div>
		<header class="bg-transparent relative z-10" transition:name="site-header">
			<div class="max-w-7xl mx-auto px-4 md:px-8 pt-4 pb-1">
				<h1 class="text-3xl md:text-5xl font-bold pt-2">
					<a href="/" class="text-black dark:text-white pointer-events-none md:pointer-events-auto md:hover:opacity-70 transition-opacity">Mattie Sipp</a>
				</h1>
			</div>
		</header>
		<nav id="main-nav" class="sticky top-0 z-50 bg-transparent transition-all duration-300" transition:name="main-nav">
			<div class="max-w-7xl mx-auto px-4 md:px-8 py-3 md:py-4">
				<!-- Mobile hamburger button -->
				<button id="mobile-menu-button" class="md:hidden w-12 h-12 flex items-center justify-center hover:text-sage-500 transition-colors" aria-label="Toggle mobile menu" aria-expanded="false">
					<svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
					</svg>
					<svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
					</svg>
				</button>

				<!-- Desktop navigation -->
				<ul class="hidden md:flex gap-2 md:gap-6 text-sm md:text-xl font-bold whitespace-nowrap">
					<li><a href="/" class={`px-2 py-1 md:px-0 md:py-0 hover:text-sage-500 hover:underline decoration-sage-500 active:text-sage-800 transition-colors ${currentPath === '/' ? 'text-sage-600' : ''}`}>Home</a></li>
					<li><a href="/videography" class={`px-2 py-1 md:px-0 md:py-0 hover:text-sage-500 hover:underline decoration-sage-500 active:text-sage-800 transition-colors ${currentPath.startsWith('/videography') ? 'text-sage-600' : ''}`}>Videography</a></li>
					<li><a href="/photography" class={`px-2 py-1 md:px-0 md:py-0 hover:text-sage-500 hover:underline decoration-sage-500 active:text-sage-800 transition-colors ${currentPath.startsWith('/photography') ? 'text-sage-600' : ''}`}>Photography</a></li>
					<li><a href="/contact" class={`px-2 py-1 md:px-0 md:py-0 hover:text-sage-500 hover:underline decoration-sage-500 active:text-sage-800 transition-colors ${currentPath === '/contact' ? 'text-sage-600' : ''}`}>Contact</a></li>
				</ul>

				<!-- Mobile navigation menu -->
				<ul id="mobile-menu" class="md:hidden hidden flex-col gap-4 mt-4 pb-4 text-lg font-bold">
					<li><a href="/" class={`block px-2 py-3 hover:text-sage-500 hover:underline decoration-sage-500 active:text-sage-800 transition-colors ${currentPath === '/' ? 'text-sage-600' : ''}`}>Home</a></li>
					<li><a href="/videography" class={`block px-2 py-3 hover:text-sage-500 hover:underline decoration-sage-500 active:text-sage-800 transition-colors ${currentPath.startsWith('/videography') ? 'text-sage-600' : ''}`}>Videography</a></li>
					<li><a href="/photography" class={`block px-2 py-3 hover:text-sage-500 hover:underline decoration-sage-500 active:text-sage-800 transition-colors ${currentPath.startsWith('/photography') ? 'text-sage-600' : ''}`}>Photography</a></li>
					<li><a href="/contact" class={`block px-2 py-3 hover:text-sage-500 hover:underline decoration-sage-500 active:text-sage-800 transition-colors ${currentPath === '/contact' ? 'text-sage-600' : ''}`}>Contact</a></li>
				</ul>
			</div>
		</nav>
		<script>
			const nav = document.getElementById('main-nav');
			const mobileMenuButton = document.getElementById('mobile-menu-button');
			const mobileMenu = document.getElementById('mobile-menu');
			const hamburgerIcon = document.getElementById('hamburger-icon');
			const closeIcon = document.getElementById('close-icon');
			let lastScroll = 0;

			// Scroll-based navigation background
			window.addEventListener('scroll', () => {
				const currentScroll = window.scrollY;

				if (currentScroll > 50) {
					nav?.classList.add('bg-white/80', 'backdrop-blur-md', 'dark:bg-stone-900/80');
					nav?.classList.remove('bg-transparent');
				} else {
					nav?.classList.remove('bg-white/80', 'backdrop-blur-md', 'dark:bg-stone-900/80');
					nav?.classList.add('bg-transparent');
				}

				lastScroll = currentScroll;
			});

			// Mobile menu toggle
			mobileMenuButton?.addEventListener('click', () => {
				const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';

				if (isExpanded) {
					// Close menu
					mobileMenu?.classList.add('hidden');
					mobileMenu?.classList.remove('flex');
					hamburgerIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					mobileMenuButton.setAttribute('aria-expanded', 'false');
				} else {
					// Open menu
					mobileMenu?.classList.remove('hidden');
					mobileMenu?.classList.add('flex');
					hamburgerIcon?.classList.add('hidden');
					closeIcon?.classList.remove('hidden');
					mobileMenuButton.setAttribute('aria-expanded', 'true');
					// Add background when menu is open
					nav?.classList.add('bg-white/95', 'backdrop-blur-md', 'dark:bg-stone-900/95');
				}
			});

			// Close mobile menu when clicking a link
			const mobileLinks = mobileMenu?.querySelectorAll('a');
			mobileLinks?.forEach(link => {
				link.addEventListener('click', () => {
					mobileMenu?.classList.add('hidden');
					mobileMenu?.classList.remove('flex');
					hamburgerIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					mobileMenuButton?.setAttribute('aria-expanded', 'false');
				});
			});
		</script>
		<main id="main-content" class="flex-1" tabindex="-1">
			<slot />
		</main>
		<footer class="p-4 md:p-8 bg-gray-100 dark:bg-stone-800 text-black dark:text-white border-t border-gray-200 dark:border-stone-700">
			<div class="max-w-7xl mx-auto">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mb-4 md:mb-6">
					<div>
						<h3 class="text-base md:text-lg font-bold mb-2 md:mb-3">Connect</h3>
						<div class="flex gap-6">
							<a href="https://instagram.com/mattie523" target="_blank" rel="noopener noreferrer" class="hover:text-sage-400 active:text-sage-600 transition-colors" aria-label="Instagram - @mattie523">
								<svg class="w-10 h-10 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24">
									<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
								</svg>
							</a>
							<a href="https://www.linkedin.com/in/mattie-sipp/" target="_blank" rel="noopener noreferrer" class="hover:text-sage-400 active:text-sage-600 transition-colors" aria-label="LinkedIn">
								<svg class="w-10 h-10 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
							</a>
						</div>
					</div>
					<div>
						<h3 class="text-base md:text-lg font-bold mb-2 md:mb-3">Contact</h3>
						<a href="/contact" class="text-sm md:text-base hover:text-sage-400 transition-colors">
							Get in touch
						</a>
					</div>
				</div>
				<div class="border-t border-white/20 pt-4 md:pt-6 text-center text-xs md:text-sm">
					<p>&copy; {new Date().getFullYear()} Mattie Sipp. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
